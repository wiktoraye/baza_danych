Zadanie 3
a)
update  postac set nazwa_statku='Gloria' WHERE nazwa LIKE '%a%';
b)
select*from statek;
update statek set max_ladownosc=(max_ladownosc*0.7) WHERE data_wodowania <'2000-01-01' AND data_wodowania >'1901-01-01';


